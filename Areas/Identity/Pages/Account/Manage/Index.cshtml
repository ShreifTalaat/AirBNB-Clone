@page
@model IndexModel
@{
    ViewData["Title"] = "Personal info";
    Layout = null;
}

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Account/personal info/personal info.css" />
    <!-- to implement the intl-tel-input. into html -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.min.js"></script>
    <title>Personal info</title>
</head>
<body>
    <div style="min-height: 100vh;  display: flex; flex-direction: column;">
        <!-- Start Nav -->
        <section>
            <header class="site-header sticky-top py-1">
                <nav class="navbar navbar-light">
                    <div class="container d-inline-flex justify-content-between">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                            <img src="~/Resources/logoLogo.svg" alt="logo">
                        </a>
                    </div>
                </nav>
                <hr />
            </header>
        </section>
        <!-- End Nav -->
        <div class="container-lg">
            <div>
                <h6><a asp-area ="Identity" asp-page="/Account/Manage/Account settings" class="text-black text-decoration-none">Account</a> > Personal info</h6>
            </div>
            <div>
                <h1>Personal info</h1>
            </div>
            <br>
            <br>
            <partial name="_StatusMessage" for="StatusMessage" />
            <div style="max-width: 612px;">
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <!-- Legal name -->
                    <div class="d-flex justify-content-between border-bottom">
                        <div>
                            <h6 class="bigdata">Legal name</h6>
                            <h6 class="data">@Model.Input.First_Name @Model.Input.Last_Name</h6>
                            <br>
                        </div>
                        <div>
                            <a href="#" class="text-black" data-bs-toggle="modal" data-bs-target="#legalname">Edit</a>
                            <!-- Modal -->
                            <div class="modal fade" id="legalname" data-bs-backdrop="static" data-bs-keyboard="false"
                                 tabindex="-1" aria-labelledby="legalname" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="legalname">
                                                Change your Legal name
                                            </h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <input asp-for="Input.First_Name" class="form-control rounded" autocomplete="username" aria-required="true" placeholder="First name" />

                                            <span asp-validation-for="Input.First_Name" class="text-danger"></span>
                                            <input asp-for="Input.Last_Name" class="form-control rounded" autocomplete="username" aria-required="true" placeholder="Last name" />

                                            <span asp-validation-for="Input.Last_Name" class="text-danger"></span>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">
                                                Close
                                            </button>
                                            <button type="submit" id="update-profile-button" class="btn btn-primary">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <br />
              
                    <!-- Email -->
                    <div class="d-flex justify-content-between border-bottom">
                        <div>
                            <h6 class="bigdata">Email address</h6>
                            <h6 class="data">@Model.Input.Email</h6>
                            <br>
                        </div>
                       <div>
                        <a href="#" class="text-black" data-bs-toggle="modal" data-bs-target="#Email">Edit</a>
                        <!-- Modal -->
                        <div class="modal fade" id="Email" data-bs-backdrop="static" data-bs-keyboard="false"
                            tabindex="-1" aria-labelledby="Email" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="Email">Change your Email address
                                        </h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                        <div class="modal-body">
                                            <input asp-for="Input.Email" class="form-control rounded" autocomplete="username" aria-required="true" placeholder="name@example.com" />

                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">
                                                Close
                                            </button>
                                            <button type="submit" id="update-profile-button" class="btn btn-primary">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <br />

                    <!-- Phone number -->
                    <div class="d-flex justify-content-between border-bottom">
                     
                        <div>
                            <h6 class="bigdata">Phone number</h6>
                            <h6 class="data">@Model.Input.Phone_Number</h6>
                            <br>
                        </div>
                      <div>
                        <a href="#" class="text-black" data-bs-toggle="modal" data-bs-target="#ph-number">Edit</a>
                        <!-- Modal -->
                        <div class="modal fade" id="ph-number" data-bs-backdrop="static" data-bs-keyboard="false"
                            tabindex="-1" aria-labelledby="ph-number" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="ph-number">Change your Phone number
                                        </h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                        <div class="modal-body d-flex align-items-center">
                                            <span class="m-2">+20 </span>
                                            <input asp-for="Input.Phone_Number" class="form-control rounded" type="tel"  autocomplete="username" aria-required="true" placeholder="Phone number " />
                                            <span asp-validation-for="Input.Phone_Number" class="text-danger"></span>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">
                                                Close
                                            </button>
                                            <button type="submit" id="update-profile-button" class="btn btn-primary">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <br />

                    <!-- City -->
                    <div class="d-flex justify-content-between border-bottom">

                        <div>
                            <h6 class="bigdata">City</h6>
                            <h6 class="data">@Model.Input.City</h6>
                            <br>
                        </div>
                        <div>
                            <a href="#" class="text-black" data-bs-toggle="modal" data-bs-target="#city">Edit</a>
                            <!-- Modal -->
                            <div class="modal fade" id="city" data-bs-backdrop="static" data-bs-keyboard="false"
                                 tabindex="-1" aria-labelledby="city" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="city">
                                                Change your city
                                            </h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <select asp-for="Input.City" class="form-control rounded">
                                                <option value="">Select a city</option>
                                                <option value="Alexandria">Alexandria</option>
                                                <option value="Aswan">Aswan</option>
                                                <option value="Asyut">Asyut</option>
                                                <option value="Beheira">Beheira</option>
                                                <option value="Beni Suef">Beni Suef</option>
                                                <option value="Cairo">Cairo</option>
                                                <option value="Dakahlia">Dakahlia</option>
                                                <option value="Damietta">Damietta</option>
                                                <option value="Faiyum">Faiyum</option>
                                                <option value="Gharbia">Gharbia</option>
                                                <option value="Giza">Giza</option>
                                                <option value="Ismailia">Ismailia</option>
                                                <option value="Kafr El Sheikh">Kafr El Sheikh</option>
                                                <option value="Luxor">Luxor</option>
                                                <option value="Matruh">Matruh</option>
                                                <option value="Minya">Minya</option>
                                                <option value="Monufia">Monufia</option>
                                                <option value="New Valley">New Valley</option>
                                                <option value="North Sinai">North Sinai</option>
                                                <option value="Port Said">Port Said</option>
                                                <option value="Qalyubia">Qalyubia</option>
                                                <option value="Qena">Qena</option>
                                                <option value="Red Sea">Red Sea</option>
                                                <option value="Sharqia">Sharqia</option>
                                                <option value="Sohag">Sohag</option>
                                                <option value="South Sinai">South Sinai</option>
                                                <option value="Suez">Suez</option>
                                            </select>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">
                                                Close
                                            </button>
                                            <button type="submit" id="update-profile-button" class="btn btn-primary">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <br />

                </form>
            </div>
        </div>

        <div class="footer pt-4 pb-4">
            <div class="container">
                <div class="row">
                    <div class="col-6">
                        <ul class="list-group list-group-horizontal">
                            <li type="none">© 2023 Airbnb, Inc.</li>
                            <span class="ms-2 me-2">·</span>
                            <a href="https://www.airbnb.com/help/article/2908" class="text-dark">
                            <li type="none">Terms</li>
                            </a>
                            <span class="ms-2 me-2">·</span>
                            <a href="https://www.airbnb.com/help/article/2855" class="text-dark">
                            <li type="none">Privacy</li>
                            </a>
                        </ul>
                    </div>
                    <div class="col-2"></div>
                    <div class="col-4">
                        <div>
                            <a href="https://www.facebook.com/airbnb" class="text-decoration-none">
                                <img src="~/PropertDetails/Resources/facebook-logo.png" alt="facebook" style="width: 1.5rem;">
                            </a>
                            <a href="https://twitter.com/airbnb" class="text-decoration-none">
                                <img src="~/PropertDetails/Resources/twitter-icon.png" alt="twitter" style="width: 1.5rem;" class="ms-4">
                            </a>
                            <a href="https://www.instagram.com/airbnb/" class="text-decoration-none">
                                <img src="~/PropertDetails/Resources/instagram-icon.png" alt="instagram" style="width: 1.5rem;" class="ms-4">
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End footer -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/Account/personal info/Personal info.js"></script>

</body>