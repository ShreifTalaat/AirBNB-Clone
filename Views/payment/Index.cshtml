@model AirBNB.ViewModels.PaymentViewModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<link href="./lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet">*@
    <link href="./css/paymentStyles.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet' type='text/css'>
    <!----------------------->
    <title>AIRBNB </title>
</head>

<body>
    <!-- Navigation Bar -->
    <section>
        <header class="site-header sticky-top py-1">
            <nav class="navbar navbar-light">
                <div class="container d-inline-flex justify-content-between">
                    <a class="navbar-brand" href="#">
                        <img src="./Resources/logoLogo.svg" alt="logo">
                    </a>
                </div>
            </nav>
            <hr />
        </header>
    </section>
    <!-- Header -->
    <form asp-action="Index">
        <section>
            <div class="container d-flex ">
                <div class="">
                    <a class="" href="#">
                        <img src="./Resources/backarrow.svg" style="width: 16px;" class="mt-3 me-5 pt-1 rounded-circle ">
                    </a>
                </div>
                <div class="fs-2 fw-semibold">
                    Confirm and pay
                </div>
            </div>
        </section>
        <!-- Main section conatiner -->
        <section class="container">
            <div class="row g-1 my-5 mx-0 border-bottom">
                <div class="col-lg-6 ">
                    <!---------------------------------------->
                    <!-- Trip details -->
                    <section>
                        <!-- yourtrip -->
                        <div class=" pb-4 ms-0 border-bottom">
                            <div class="d-flex mt-4">
                                <div class="pe-0 text-center">
                                    <p class="fw-semibold fs-4">
                                        Your trip
                                    </p>
                                </div>
                            </div>
                            <div class="row d-flex">
                                <!-- dates -->
                                <div class="row me-5 mb-2">
                                    <div class="col-11">
                                        <span class="fw-semibold">Dates</span><br>
                                        <span id="dateRange">@Model.CheckIn.ToString("MMM d") to @Model.CheckOut.ToString("MMM d")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row d-flex">
                                <!-- guests -->
                                <div class="row me-5 mb-2">
                                    <div class="col-11">
                                        <span class="fw-semibold">Guests</span><br>
                                        <span id="noOfGuests">@Model.NOfGuests</span>
                                        <input asp-for="NOfGuests" type="hidden" />
                                        <span> guest</span>
                                    </div>
                                </div>
                                <!----->
                            </div>
                    </section>
                    <!---------------------------------------->
                    <!-- Payment-->
                    <section class=" border-bottom">

                        <div class="needs-validation" id="payment-form" novalidate>
                            <div class="row mt-4 pb-4">
                                <h4 class="">Payment details</h4>
                                <div class="inputbox mt-3">
                                    <input type="text" name="name" class="form-control shadow" required>
                                    <span class="ms-3">Name on card</span>
                                    <div class="invalid-feedback">
                                        Please enter your name.
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="inputbox mt-3 me-2">
                                            <input type="text" name="card" class="form-control shadow" required>
                                            <i class="fa fa-credit-card"></i>
                                            <span>Card Number</span>
                                            <div class="invalid-feedback">
                                                Please enter a valid card number.(16)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex flex-row">
                                            <div class="inputbox mt-3 me-2 ms-3">
                                                <input type="text" name="expiry" class="form-control shadow" required>
                                                <span>Expiry</span>
                                                <div class="invalid-feedback">
                                                    Please enter a valid expiry date. (MM/YY)
                                                </div>
                                            </div>
                                            <div class="inputbox mt-3 me-2">
                                                <input type="text" name="billingAddress" class="form-control shadow"
                                                       required>
                                                <span>CVV</span>
                                                <div class="invalid-feedback">
                                                    Please enter a valid CVV number.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4 mb-4">
                                    <h6 class="text-uppercase">Billing Address</h6>
                                    <div class="row mt-3">
                                        <div class="col-md-6">
                                            <div class="inputbox mt-3 me-2">
                                                <input type="text" name="streetAddress" class="form-control shadow"
                                                       required>
                                                <span>Street Address</span>
                                                <div class="invalid-feedback">
                                                    Please enter your street address.
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="inputbox mt-3 me-2">
                                                <input type="text" name="city" class="form-control shadow" required>
                                                <span>City</span>
                                                <div class="invalid-feedback">
                                                    Please enter your city.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-md-6">
                                            <div class="inputbox mt-3 me-2">
                                                <input type="text" name="state" class="form-control shadow" required>
                                                <span>State/Province</span>
                                                <div class="invalid-feedback">
                                                    Please enter your state/province.
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="inputbox mt-3 me-2">
                                                <input type="text" name="zipCode" class="form-control shadow" required>
                                                <span>Zip code</span>
                                                <div class="invalid-feedback">
                                                    Please enter your Zip Code
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!---------------------------------------->
                    <!-- cancelation policy -->
                    <section class="border-bottom py-5">
                        <div>
                            <h3>Cancellation policy.</h3><br>
                            <span class="fw-bold">Free cancellation for 48 hours. </span>Cancel before
                            <span id="cancelationDate">Apr 19 </span>
                            for a partial
                            refund. <a href="#" class="text-black">Learn more</a>
                        </div>
                    </section>
                    <!---------------------------------------->
                    <!-- Ground rules -->
                    <section class="border-bottom py-5">
                        <div>
                            <h3>Ground rules</h3>
                            We ask every guest to remember a few simple things about what makes a great guest.
                            <ul class="mt-3">
                                <li>Follow the house rules .</li>
                                <li>Treat your Host’s home like your own .</li>
                            </ul>
                        </div>
                    </section>
                    <!---------------------------------------->
                    <!-- Confrimation  -->
                    <section class="border-bottom py-5">
                        <div class="" style="font-size: 12px;">
                            By selecting the button below, I agree to the
                            <a href="#" class="text-black fw-semibold">Host's House Rules</a>
                            ,<a href="#" class="text-black fw-semibold"> Ground rules for guests</a>
                            ,<a href="#" class="text-black fw-semibold">Airbnb's Rebooking and Refund Policy</a>
                            ,<a href="#" class="text-black fw-semibold">and that Airbnb can charge my payment method</a>
                            if I’m responsible for damage.
                        </div>
                        <input type="submit" value="Confirm and pay" name="pay"
                               class="btn btn-lg rounded-5 fs-6 fw-semibold px-4 py-3 my-3 airBnbButton bg-gradient" />
                    </section>

                    <!---------------------------------------->

                </div>
                <!-- Confiramtion Floating Card -->
                <div class="col-lg-6 ">
                    <div class="ConfirmationFloatCard mb-5 ">
                        <div class="d-flex justify-content-end ms-5">
                            <div class="border rounded-4 shadow-lg p-4">
                                <!-- details -->
                                <div class="border-bottom py-4 ">
                                    <img class=" rounded-3 " src="~/Prop.Image/Prop1/@Model.URL" style="width: auto ;height:90px; aspect-ratio:1/1;object-fit: cover">
                                    <div class="d-inline-flex align-top col">
                                        <span class="text-muted  ps-2">@Model.Title</span>
                                        <br>
                                        <span class="mt-3 p-2 position-absolute">
                                            @Model.Description
                                        </span>
                                    </div>
                                    <div>
                                    </div>
                                </div>
                                <!-- air cover -->
                                <div class="border-bottom py-4">
                                    <span class="fs-5">Your booking is protected by</span>
                                    <img class=" aircover" src="./Resources/AirBnbCover.webp">
                                </div>
                                <!-- pricedetails -->
                                <div class="border-bottom py-4">
                                    <h4>Price details </h4>
                                    <div class="d-flex justify-content-between my-2">
                                        <span>
                                            <span>
                                                EGP
                                                <span id="price">@Model.Price</span>
                                            </span>
                                            x
                                            <span id="noDays">@(( Model . CheckOut - Model . CheckIn ) . TotalDays + 1) </span>
                                            nights
                                        </span>
                                    </div>
                                </div>
                                <!-- total -->
                                <div class="d-flex justify-content-between pt-4 fw-bold">
                                    <span class="text-black">
                                        Total (EGP)
                                    </span>
                                    <span id="finalTotalPrice">@(Model . Price * ( ( Model . CheckOut - Model . CheckIn ) . TotalDays + 1 ))</span>
                                    <input asp-for="Amount" type="hidden" value="@(Model.Price * ((Model.CheckOut - Model.CheckIn).TotalDays + 1))" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!------------------------------------------->
        </section>
    </form>
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <!-- Bootstrap -->
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet' type='text/css'>
    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js' type='text/javascript'></script>
    <!-- Datepicker -->
    <script src="./js/jquery-3.3.1.min.js"></script>
    <script src="./js/popper.min.js"></script>
    <script src="./lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Scripts -->
    <script src="./js/paymentJavaScript.js"></script>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
</body>

</html>