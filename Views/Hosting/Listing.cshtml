@model IEnumerable<Property>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/Hosting/Listingstyles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/5b61638241.js" crossorigin="anonymous"></script>
    <script src="/script.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"></script>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"></script>

    <title>airbnb</title>
</head>

<body>
    <!-- Start Nav -->
    <nav class="navbar navbar-expand-lg bg-white sticky-top border border-bottom" style="height: 70px;">
        <!-- Start div tha t contain the items in nav -->
        <div class="container   d-flex flex-nowrap justify-content-between ">
            <!-- Start Logo -->
            <a asp-action="Index" asp-controller="Home" class="text-decoration-none">
                <div class="d-flex align-items-center">
                    <i class="fa-brands fa-airbnb air-logo"></i>
                </div>
            </a>
            <!-- End Logo -->
            <!-- Start Search -->
            <div class="d-flex align-items-center ">
                <div class="container-fluid ">

                    <div href="#" class="bg-white  d-flex align-items-center justify-content-between navigation_btn">
						<a asp-action="Index" class="view_bar text-decoration-none" id="todayLink" style="color: #808080;">Today</a>
                        <a asp-action="Listing" class="view_bar text-decoration-none" id="listingLink" style="color: #060606;
                                                                                                                  padding: 5px 0px;
                                                                                                             border-bottom: solid;">Listing</a>
                        <a asp-action="Reservations" class="view_bar text-decoration-none" id="reservationsLink" style="color: #808080;">Reservations</a>


                    </div>

                </div>


            </div>
            <!-- End Search -->
            <!-- Start person -->

            <div class="d-flex">
                <div class="btn rounded-5 ms-3 d-inline-flex align-items-center p-1 dropdown-center "
                     data-bs-toggle="dropdown" aria-expanded="false">
                    <div class="ml-auto p-1 ms-2 ">
                    <img class="rounded-circle object-fit-cover" src="data:image/*;base64,@(Convert.ToBase64String(ViewBag.PropertyUserProfilePic))"
                         style="width: 30px; height: 30px;" alt="Host_Img">
                </div >
                </div >
                <div class="class=" dropdown"">
                    <ul class="dropdown-menu dropdown-menu-end rounded" aria-labelledby="dropdownMenuLink " style="width: 1rem;">
                        <li class="nav-item">
                            <a class="smallTxt dropdown-item" href="~/Identity/Account/Manage">Profile</a>
                        </li>
                        <li>
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="smallTxt dropdown-item">Logout</button>
                            </form>
                        </li>
                        
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item  smallTxt" href="">Airbnb your home</a></li>
                        <li><a class="dropdown-item  smallTxt" href="https://www.airbnb.com/help?audience=guest">Help</a></li>
                    </ul>
                </div>
            </div>

            <!-- End person -->
        </div>
        <!-- End div tha t contain the items in nav -->
    </nav>
    <!-- End Nav -->
    <!-- start page content -->

    <div class="container">
        <div class="d-flex flex-row justify-content-between listing-details">
            <h4 class="col fw-bold">@Model.Count() listings</h4>
            <div class="col col-lg-auto rounded border border-1 border-dark btn">
                <a asp-action="Index" asp-controller="Listing" class="text-decoration-none">
                    <i class="fa-solid fa-plus"></i> Create List
                </a>
            </div>
            

        </div>
    </div>
    <!--Start search bar and buttons-->
    <div class="container">
        <div class="topnav">

            <div class="btn-group row">
                <div class="col-6">
                
                <input type="text" class="form-control" id="searchInput" placeholder="Search"></div>
                <div class="col-2">
                    <button type="button" class="btn btn-danger" id="searchButton">Search</button>
                </div>
                <div class="col-2  mx-2">
                    <button type="button" class="btn btn-secondary" id="resetButton">reset</button>
                </div>
            </div>
            
        </div>
    </div>
    <!--end search bar and buttons-->
    <!--Start Reservations Details-->
    <div class="container">


        <!--End Reservations Details-->
        <!--start guests Details-->
        @if (Model.Count() != 0)
        {
            <table class="table">
                <thead>
                   <tr>
                        <th scope="col">LISTING</th>
                        <th scope="col">STATUS</th>
                        <th scope="col">BEDROOMS</th>
                        <th scope="col">BEDS</th>
                        <th scope="col">BATHS</th>
                        <th scope="col">LOCATION</th>
                        <th scope="col">DATE POSTED</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="d-flex" style="align-items: baseline;">
                                <div>
                                    @foreach (var img in item.PropertyImages)
                                    {
                                        <img style="width: 70px;height: 40px;" src="~/Prop.Image/Prop1/@img.URL">
                                        break;

                                    }

                                </div>
                                <div><p class="p-2 table-row">@item.Title</p></div>


                            </td>
                            <td>
                                <div class="d-flex" style="align-items: baseline;">
                                    @if (item.Accepted == true)
                                    {
                                        <i class="fa-solid fa-check"></i>
                                        <p class="p-2">Accepted</p>
                                    }
                                    else
                                    {
                                        <i class="fa-regular fa-hourglass-half"></i>
                                        <p class="p-2"> In progress</p>
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="d-flex" style="align-items: baseline;">
                                    <p class="p-2">@item.NumberOfBedRooms</p>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex" style="align-items: baseline;">
                                    <p class="p-2"> @item.NumberOfBeds</p>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex" style="align-items: baseline;">
                                    <p class="p-2">@item.NumberOfBathRooms</p>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex" style="align-items: baseline;">
                                    <p class="p-2"> @item.Region.City.Name</p>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex" style="align-items: baseline;">
                                    <p class="p-2"> @item.Date.ToString("dd/MM/yyyy")</p>
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="container text-center guests-container">
                <i class="fa-solid fa-user-check"></i>
                <h4>You still haven't listed  <br />anything yet.</h4>

            </div>
        }
        <!--end guests Details-->
       
        <!-- end page content -->
        <!-- Start footer -->

        </div>
    <!-- Footer -->
    <div class="footer pt-4 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <ul class="list-group list-group-horizontal">
                        <li type="none">© 2023 Airbnb, Inc.</li>
                        <span class="ms-2 me-2">·</span>
                        <a href="https://www.airbnb.com/help/article/2908" class="text-dark">
                        <li type="none">Terms</li>
                        </a>
                        <span class="ms-2 me-2">·</span>
                        <a href="https://www.airbnb.com/help/article/2855" class="text-dark">
                        <li type="none">Privacy</li>
                        </a>
                    </ul>
                </div>
                <div class="col-2"></div>
                <div class="col-4">
                    <div>
                        <a href="https://www.facebook.com/airbnb" class="text-decoration-none">
                            <img src="~/PropertDetails/Resources/facebook-logo.png" alt="facebook" style="width: 1.5rem;">
                        </a>
                        <a href="https://twitter.com/airbnb" class="text-decoration-none">
                            <img src="~/PropertDetails/Resources/twitter-icon.png" alt="twitter" style="width: 1.5rem;" class="ms-4">
                        </a>
                        <a href="https://www.instagram.com/airbnb/" class="text-decoration-none">
                            <img src="~/PropertDetails/Resources/instagram-icon.png" alt="instagram" style="width: 1.5rem;" class="ms-4">
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
    $(document).ready(function() {
        $('#searchButton').click(function() {
            var searchQuery = $('#searchInput').val().toLowerCase();
            $('tr').not(':first').hide(); // Hide all table rows
            $('tr').each(function() {
                var rowText = $(this).text().toLowerCase();
                if (rowText.includes(searchQuery)) {
                    $(this).show(); // Show only the row that matches the search query
                    return false; // Stop iterating through the rows once a match is found
                }
            });
        });
                $('#resetButton').click(function () {
                    $('#searchInput').val(''); // Clear the search input
                    $('tr').show(); // Show all table rows
                });
    });
</script>
        <script>
            $(document).ready(function () {
                // Get the current URL path and set the active link based on it
                var url = window.location.pathname;
                var page = url.substr(url.lastIndexOf('/') + 1);
                if (page === "Index") {
                    $('#todayLink').addClass('active-link');
                } else if (page === "Listing") {
                    $('#listingLink').addClass('active-link');
                } else if (page === "Reservations") {
                    $('#reservationsLink').addClass('active-link');
                }

                // Add click event on each navigation link
                $('#todayLink, #listingLink, #reservationsLink').click(function () {
                    // Remove active class from all navigation links
                    $('#todayLink, #listingLink, #reservationsLink').removeClass('active-link');
                    // Add active class to the clicked link
                    $(this).addClass('active-link');
                });
            });
        </script>
        <!-- End footer -->
</body>

</html>
